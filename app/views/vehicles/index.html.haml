.container
  %p#notice= notice
  %h1
    %span.badge.badge-danger Vehicle
  %table.table.table.striped
    %thead
      %tr
        %th Car type
        %th Color
        %th Car Owner
        %th{:colspan => "3"}
    %tbody
      - @vehicles.each do |vehicle|
        - vehs = vehicle.person
        %tr
          %td= vehicle.car_type
          %td= vehicle.color
          %td= vehs.name 
          %td= link_to 'Show', vehicle, {class: 'btn btn-outline-info'}
          %td= link_to 'Edit', edit_vehicle_path(vehicle), {class: 'btn btn-outline-warning'}
  %br/
  = link_to 'New Vehicle', new_vehicle_path, {class: 'btn btn-danger'}