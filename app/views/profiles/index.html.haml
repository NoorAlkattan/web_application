.container
  %p#notice= notice
  %h1
    %span.badge.badge-primary Profile
  %table.table.table-striped
    %thead
      %tr
        %th Email address
        %th Gender
        %th Age
        %th Status
        %th{:colspan => "3"}
    %tbody
      - @profiles.each do |profile|
        %tr
          %td= profile.email_address
          %td= profile.gender
          %td= profile.age
          %td
            - if profile.active
              %input{checked: 'checked', class: 'profile_check', id: profile.id, data: { toggle: 'toggle', off: 'inactive', on: 'active', profile_id: profile.id}, onclick: "toggleSomething()", type: 'checkbox'}
            - else
              %input{ data: { toggle: 'toggle', off: 'inactive', on: 'active', profile_id: profile.id}, class: 'profile_check', id: "#{profile.id}", onclick: "toggleSomething()", type: 'checkbox'}
          %td= link_to 'Show', profile , {class: 'btn btn-outline-info'}
          %td= link_to 'Edit', edit_profile_path(profile), {class: 'btn btn-outline-warning'}
  %br/
  = link_to 'New Profile', new_profile_path, {class: 'btn btn-info'}
