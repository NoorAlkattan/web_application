.container
  %p#notice= notice
  %h1
  %button.btn.btn-danger{:type => "button"}
    Addresses
    %span.badge.badge-pill.badge-default= @addresses.count
  %table.table.table-striped
    %thead
      %tr
        %th Street
        %th City
        %th Zipcode
        %th Person Name
        %th{:colspan => "3"}
    %tbody
      - @addresses.each do |address|
        - pers = address.person
        - prof = pers.profile
        %tr
          %td= address.street
          %td= address.city
          %td= address.zipcode
          %td= pers.name
          %td= link_to 'Show', address, {class: 'btn btn-outline-info btn-sm'}
          %td= link_to 'Edit', edit_address_path(address), {class: 'btn btn-outline-warning btn-sm'}
  %br/
  = link_to 'New Address', new_address_path, {class: 'btn btn-info'}
  = link_to 'Back', people_path, {class: 'btn btn-secondary'}
